<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC  "-//SPRING//DTD BEAN//EN"
 "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
  <description>
  This is the core config file.
  This only contains the other config files that the BM will use.
  </description>
   <bean id="config" class="main.ConfigLoader">
    <property name="configFiles">
      <list>
      	<value>cfg/engines-config.xml</value>
        <value>cfg/mqtt-config.xml</value>
        <value>cfg/main-config.xml</value>
        <value>cfg/modules-config.xml</value>
      </list>
    </property>
   </bean> 
</beans>
